        },
        "descripcion": {
          "type": "string"
        },
        "imagen": {
          "type": "string"
        },
        "fecha": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "tipo": {
          "type": "string",
          "default": "encuentros"
        },
        "destacado": {
          "type": "boolean",
          "default": false

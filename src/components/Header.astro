---
import siteSettings from '../content/settings/site.json';
import WhatsAppButton from './WhatsAppButton.astro';

const defaultNavItems = [
  { label: 'Inicio', href: '/#inicio' },
  { label: 'Agenda', href: '/#agenda' },
  { label: 'Talleres', href: '/#talleres' },
  { label: 'Comunidad', href: '/#comunidad' },
  { label: 'Galería', href: '/#galeria' },
  { label: 'Contacto', href: '/#contacto' },
];

const { navItems = defaultNavItems } = Astro.props;
---

<header class="site-header">
  <div class="container header-container">
    <div class="logo">
      <a href="/">
        <span class="logo-text">CIArte</span>
        <span class="logo-sub">El Laberinto</span>
      </a>
    </div>

    <nav class="main-nav">
      <ul>
        {navItems.map(item => (
          <li><a href={item.href}>{item.label}</a></li>
        ))}
      </ul>
    </nav>

    <div class="header-actions">
    <div class="header-btn-wrapper">
      <WhatsAppButton className="btn-sm" message="Hola, quiero información sobre las actividades." />
    </div>
      
      <button class="menu-toggle" aria-label="Abrir menú" aria-controls="mobile-menu">
        <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="3" y1="12" x2="21" y2="12"></line><line x1="3" y1="6" x2="21" y2="6"></line><line x1="3" y1="18" x2="21" y2="18"></line></svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="mobile-menu hidden">
    <div class="container">
      <nav>
        <ul>
          {navItems.map(item => (
            <li><a href={item.href} class="mobile-link">{item.label}</a></li>
          ))}
        </ul>
      </nav>
    </div>
  </div>
</header>

<script>
  function initMenu() {
    const menuToggle = document.querySelector('.menu-toggle');
    const mobileMenu = document.getElementById('mobile-menu');
    const mobileLinks = document.querySelectorAll('.mobile-link');

    if (menuToggle && mobileMenu) {
      // Clone element to remove old listeners (simple way to avoid duplicates on re-run)
      const newMenuToggle = menuToggle.cloneNode(true);
      menuToggle.parentNode.replaceChild(newMenuToggle, menuToggle);
      
      newMenuToggle.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
        const isExpanded = !mobileMenu.classList.contains('hidden');
        newMenuToggle.setAttribute('aria-expanded', isExpanded.toString());
      });

      // Close mobile menu when clicking a link
      mobileLinks.forEach(link => {
        link.addEventListener('click', () => {
          mobileMenu.classList.add('hidden');
          if (newMenuToggle) newMenuToggle.setAttribute('aria-expanded', 'false');
        });
      });
    }

    // Sticky header logic
    const header = document.querySelector('.site-header');
    const updateHeader = () => {
       if (window.scrollY > window.innerHeight * 0.8) {
        header?.classList.add('scrolled');
      } else {
        header?.classList.remove('scrolled');
      }
    };
    
    window.removeEventListener('scroll', updateHeader); // Clean up if possible, but hard with anon functions
    window.addEventListener('scroll', updateHeader);
  }

  // Run on initial load
  initMenu();

  // Run on subsequent navigations
  document.addEventListener('astro:page-load', initMenu);
</script>

<style>
  .site-header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: var(--z-sticky);
    background: transparent; /* Completely transparent at top */
    border-bottom: 1px solid transparent;
    transition: all var(--transition-normal);
  }

  .site-header.scrolled {
    background: var(--color-neutral-900); /* Solid on scroll */
    padding-block: var(--space-2);
    box-shadow: var(--shadow-md);
    border-bottom-color: var(--color-primary-900);
  }

  .header-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 80px;
    transition: height var(--transition-normal);
  }

  .site-header.scrolled .header-container {
    height: 64px;
  }

  .logo a {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    line-height: 1;
  }

  .logo-text {
    font-family: var(--font-family-heading);
    font-weight: 800;
    font-size: 1.5rem;
    color: var(--color-primary-500); /* Red */
    letter-spacing: -0.02em;
    text-shadow: 0 2px 10px rgba(0,0,0,0.5);
  }

  .logo-sub {
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--color-text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .main-nav {
    display: none;
  }

  .main-nav ul {
    display: flex;
    gap: var(--space-6);
  }

  .main-nav a {
    font-weight: 500;
    color: var(--color-text-primary); /* White */
    position: relative;
    padding-block: var(--space-2);
    text-shadow: 0 1px 2px rgba(0,0,0,0.8);
  }

  .main-nav a:hover {
    color: var(--color-accent-400); /* Gold */
  }

  .main-nav a::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background-color: var(--color-accent-400); /* Gold underline */
    transition: width var(--transition-fast);
  }

  .main-nav a:hover::after {
    width: 100%;
  }

  .header-actions {
    display: flex;
    align-items: center;
    gap: var(--space-4);
  }

  .menu-toggle {
    display: flex;
    color: var(--color-text-primary);
  }

  .mobile-menu {
    position: absolute;
    top: 100%;
    left: 0;
    width: 100%;
    background-color: var(--color-surface);
    border-bottom: 1px solid var(--color-neutral-200);
    padding-block: var(--space-4);
    box-shadow: var(--shadow-md);
    transition: transform var(--transition-normal), opacity var(--transition-normal);
    transform-origin: top;
  }

  .mobile-menu.hidden {
    display: none;
  }

  .mobile-menu ul {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .mobile-menu a {
    display: block;
    padding: var(--space-3) 0;
    font-weight: 500;
    color: var(--color-text-primary);
    border-bottom: 1px solid var(--color-neutral-100);
  }

  .mobile-menu a:last-child {
    border-bottom: none;
  }

  .btn-sm {
    display: none;
    padding: var(--space-2) var(--space-4);
    font-size: var(--font-size-sm);
  }

  /* Mobile: Center WhatsApp button */
  @media (max-width: 1023px) {
    .header-actions {
      flex: 1;
      justify-content: center;
    }

    .header-btn-wrapper {
      display: none;
    }

    .menu-toggle {
      position: absolute;
      right: var(--space-4);
    }

    .header-container {
      position: relative;
    }
  }

  @media (min-width: 1024px) {
    .main-nav {
      display: block;
    }

    .menu-toggle {
      display: none;
    }

    .btn-sm {
      display: inline-flex;
    }
  }
</style>

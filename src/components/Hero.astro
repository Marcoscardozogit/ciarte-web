---
import { getEntry } from 'astro:content';
import { getImage } from 'astro:assets';
import defaultHeroImage from '../assets/images/integrantes5.jpg';

const home = await getEntry('home', 'content');
const heroImageSource = home?.data?.hero_image || defaultHeroImage;

const optimizedHero = await getImage({src: heroImageSource, format: 'webp', quality: 90});
const heroUrl = `url(${optimizedHero.src})`;
---

<section class="hero-section" id="inicio" style={`background-image: ${heroUrl}`}>
  <div class="hero-overlay"></div>
  <div class="container hero-content reveal">
    <h1 class="hero-title">
      <span class="d-block text-white">CIArte</span>
      <span class="d-block text-accent">El Laberinto</span>
    </h1>
    <p class="hero-subtitle">
      Espacio de arte comunitario y encuentro para todas las edades en General Güemes.
    </p>
    <div class="hero-actions">
      <a href="#agenda" class="btn btn-primary">Próximos Eventos</a>
      <a href="#talleres" class="btn btn-secondary">Ver Talleres</a>
    </div>
  </div>
</section>

<style>
  .hero-section {
    position: relative;
    height: 90vh;
    min-height: 600px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    background-size: cover;
    background-position: center;
    color: white;
    margin-top: -80px; /* Counteract header height */
    padding-top: 180px;
  }

  @media (max-width: 768px) {
    .hero-section {
      height: 80vh;
      min-height: 500px;
      padding-top: 120px;
    }
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.3),
      rgba(0, 0, 0, 0.9)
    );
    z-index: 1;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    max-width: 800px;
  }

  .hero-title {
    font-size: clamp(3rem, 8vw, 6rem);
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: var(--space-6);
    text-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
  }

  .d-block {
    display: block;
  }

  .text-accent {
    color: var(--color-accent-400);
  }

  .hero-subtitle {
    font-size: clamp(1.125rem, 4vw, 1.5rem);
    margin-bottom: var(--space-8);
    color: var(--color-neutral-100);
    text-shadow: 0 2px 5px rgba(0, 0, 0, 0.5);
    max-width: 600px;
    margin-inline: auto;
  }

  .hero-actions {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-4);
  }
</style>

---
import siteSettings from '../content/settings/site.json';
import WhatsAppButton from './WhatsAppButton.astro';
---

<section class="section contact-section" id="contacto">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">Estamos Aquí</h2>
      <p class="section-subtitle">Vení a visitarnos al Centro de Jubilados Los Olivos o escribinos para más info.</p>
    </div>

    <div class="grid-2 contact-grid">
      <div class="contact-info">
        <div class="info-card">
          <h3>Dirección</h3>
          <p>{siteSettings.direccion}</p>
          <p class="text-muted">Centro de Jubilados Los Olivos</p>
        </div>

        <div class="info-card">
          <h3>Contacto Directo</h3>
          <p>Coordinamos actividades toda la semana.</p>
          <div class="cta-wrapper">
            <WhatsAppButton className="btn-lg" />
          </div>
        </div>

        <div class="info-card redes">
          <h3>Seguinos</h3>
          <p>Enterate de todas las novedades en nuestras redes.</p>
          <div class="social-grid">
            {siteSettings.facebook && (
              <a href={siteSettings.facebook} target="_blank" rel="noopener noreferrer" class="social-btn facebook">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg>
                Facebook
              </a>
            )}
            {siteSettings.instagram && (
              <a href={siteSettings.instagram} target="_blank" rel="noopener noreferrer" class="social-btn instagram">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg>
                Instagram
              </a>
            )}
          </div>
        </div>
      </div>

      <div class="map-container">
        <iframe 
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3627.5684742614947!2d-65.05389642398578!3d-24.60410767812166!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x941b9d4df6c5b9c5%3A0x6a0a0a0a0a0a0a0a!2sGral.%20G%C3%BCemes%2C%20Salta!5e0!3m2!1ses!2sar!4v1700000000000!5m2!1ses!2sar" 
          width="100%" 
          height="100%" 
          style="border:0;" 
          allowfullscreen="" 
          loading="lazy" 
          referrerpolicy="no-referrer-when-downgrade"
          title="Ubicación de CIArte"
        ></iframe>
      </div>
    </div>
  </div>
</section>

<style>
  .contact-section {
    background-color: var(--color-surface);
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--space-8);
  }

  .contact-grid {
    align-items: stretch;
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  .info-card {
    background-color: var(--color-background);
    padding: var(--space-6);
    border-radius: var(--radius-xl);
    border: 1px solid var(--color-neutral-200);
  }

  .info-card h3 {
    color: var(--color-primary-600);
    margin-bottom: var(--space-3);
    font-size: var(--font-size-lg);
  }

  .text-muted {
    color: var(--color-text-secondary);
    font-size: var(--font-size-sm);
    margin-top: var(--space-2);
  }

  .cta-wrapper {
    margin-top: var(--space-4);
  }

  .social-grid {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
    margin-top: var(--space-4);
  }

  .social-btn {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-3);
    border-radius: var(--radius-lg);
    font-weight: 500;
    transition: transform 0.2s ease;
    text-decoration: none;
  }

  .social-btn:hover {
    transform: translateX(4px);
  }

  .social-btn.facebook {
    background-color: #e7f5ff;
    color: #1877f2;
  }

  .social-btn.instagram {
    background-color: #fff0f6;
    color: #e1306c;
  }

  .map-container {
    min-height: 400px;
    border-radius: var(--radius-xl);
    overflow: hidden;
    box-shadow: var(--shadow-md);
  }

  iframe {
    width: 100%;
    height: 100%;
    filter: grayscale(0.2); /* Estilo un poco desaturado para que combine mejor */
  }
</style>

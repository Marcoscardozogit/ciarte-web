---
import siteSettings from '../content/settings/site.json';

import { Image } from 'astro:assets';
import logoLaberinto from '../assets/images/ellaberintologonuevo.png';
import logoCiarte from '../assets/images/ciartelogonuevo-1.png';

const currentYear = new Date().getFullYear();
---

<footer class="site-footer">
  <div class="container">
    <div class="footer-grid">
      <div class="footer-brand">
        <h3>CIArte</h3>
        <p class="subtitle">Espacio de Arte Comunitario</p>
        <p class="description">
          Un proyecto de <strong>El Laberinto</strong> Grupo de Teatro Independiente en articulación con el Centro de Jubilados Los Olivos.
        </p>
        <div class="footer-logos">
          <Image src={logoLaberinto} alt="Logo El Laberinto" class="partner-logo" />
          <Image src={logoCiarte} alt="Logo CIArte" class="partner-logo" />
        </div>
      </div>

      <div class="footer-nav">
        <h4>Secciones</h4>
        <ul>
          <li><a href="/#inicio">Inicio</a></li>
          <li><a href="/#agenda">Agenda</a></li>
          <li><a href="/#talleres">Talleres</a></li>
          <li><a href="/#comunidad">Comunidad</a></li>
          <li><a href="/#galeria">Galería</a></li>
          <li><a href="/#contacto">Contacto</a></li>
        </ul>
      </div>

      <div class="footer-contact">
        <h4>Contacto</h4>
        <ul>
          <li>
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx="12" cy="10" r="3"></circle></svg>
            <span>{siteSettings.direccion}</span>
          </li>
          <li>
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path></svg>
            <a href={`https://wa.me/${siteSettings.whatsapp}`}>WhatsApp: +{siteSettings.whatsapp}</a>
          </li>
        </ul>
        
        <div class="social-links">
          {siteSettings.facebook && (
            <a href={siteSettings.facebook} target="_blank" rel="noopener noreferrer" class="social-icon" aria-label="Facebook El Laberinto">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg>
            </a>
          )}
          {siteSettings.facebook2 && (
            <a href={siteSettings.facebook2} target="_blank" rel="noopener noreferrer" class="social-icon" aria-label="Facebook CIArte">
               <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg>
            </a>
          )}
          {siteSettings.instagram && (
            <a href={siteSettings.instagram} target="_blank" rel="noopener noreferrer" class="social-icon" aria-label="Instagram">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg>
            </a>
          )}
        </div>
      </div>
    </div>

    <div class="footer-bottom">
      <p>&copy; {currentYear} CIArte – El Laberinto. Todos los derechos reservados.</p>
      <p class="credits">Desarrollado con Astro y ❤️ para la comunidad.</p>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background-color: var(--color-neutral-900);
    color: var(--color-neutral-300);
    padding-top: var(--space-16);
    padding-bottom: var(--space-8);
  }

  .footer-grid {
    display: grid;
    gap: var(--space-10);
    margin-bottom: var(--space-12);
  }

  @media (min-width: 768px) {
    .footer-grid {
      grid-template-columns: 2fr 1fr 1fr;
    }
  }

  .footer-brand h3 {
    color: white;
    font-size: var(--font-size-2xl);
    margin-bottom: var(--space-1);
  }

  .footer-brand .subtitle {
    color: var(--color-primary-400);
    font-weight: bold;
    text-transform: uppercase;
    font-size: var(--font-size-sm);
    margin-bottom: var(--space-4);
  }

  .footer-brand .description {
    max-width: 350px;
    line-height: var(--line-height-relaxed);
  }

  .footer-logos {
    display: flex;
    gap: var(--space-4);
    margin-top: var(--space-6);
    align-items: center;
  }

  .partner-logo {
    height: 120px;
    width: auto;
    opacity: 1;
    transition: transform var(--transition-normal);
  }

  @media (min-width: 768px) {
    .partner-logo {
      height: 180px;
    }
  }

  .partner-logo:hover {
    transform: scale(1.05);
  }

  h4 {
    color: white;
    font-size: var(--font-size-lg);
    margin-bottom: var(--space-4);
  }

  .footer-nav ul, .footer-contact ul {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .footer-nav a {
    color: var(--color-neutral-400);
  }

  .footer-nav a:hover {
    color: var(--color-primary-400);
    text-decoration: underline;
  }

  .footer-contact li {
    display: flex;
    gap: var(--space-3);
    align-items: flex-start;
  }

  .footer-contact svg {
    flex-shrink: 0;
    margin-top: 3px;
    color: var(--color-primary-500);
  }

  .footer-contact a {
    color: var(--color-neutral-300);
    transition: color 0.2s ease;
  }

  .footer-contact a:hover {
    color: var(--color-primary-400);
  }

  .social-links {
    display: flex;
    gap: var(--space-4);
    margin-top: var(--space-6);
  }

  .social-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.1);
    color: white;
    transition: all var(--transition-bounce);
  }

  .social-icon:hover {
    background-color: var(--color-accent-400); /* Gold */
    transform: translateY(-4px) scale(1.1);
    color: var(--color-neutral-900); /* Dark icon on gold */
    box-shadow: 0 0 15px var(--color-accent-500);
  }

  .footer-bottom {
    border-top: 1px solid var(--color-neutral-800);
    padding-top: var(--space-8);
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
    align-items: center;
    text-align: center;
    font-size: var(--font-size-sm);
  }

  @media (min-width: 768px) {
    .footer-bottom {
      flex-direction: row;
      justify-content: space-between;
    }
  }

  .credits {
    color: var(--color-neutral-600);
  }
</style>

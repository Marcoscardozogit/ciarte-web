---
interface Props {
  title: string;
  description?: string;
  image?: string;
  navItems?: { label: string; href: string }[];
}

import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Lightbox from '../components/Lightbox.astro';
import siteSettings from '../content/settings/site.json';
import { ViewTransitions } from 'astro:transitions';
import defaultImage from '../assets/images/perfiluno.jpg';

const { title, description = "CIArte - Espacio de arte comunitario en General Güemes, coordinación El Laberinto Grupo de Teatro.", navItems } = Astro.props;

// Meta tags imagenes
const image = defaultImage.src;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    
    <!-- Preconnect para Google Fonts (mejora performance) -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <link rel="canonical" href={Astro.url.href} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Primary Meta Tags -->
    <title>{title}</title>

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.url)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.url)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.url)} />

    <script type="application/ld+json" is:inline set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@graph": [
        {
          "@type": "PerformingArtsGroup",
          "@id": "https://ciarte-ellaberinto.netlify.app/#organization",
          "name": "CIArte – El Laberinto",
          "alternateName": "El Laberinto Grupo de Teatro Independiente",
          "description": "Espacio de arte comunitario y encuentro para todas las edades en General Güemes, Salta. 19 años de trayectoria en teatro y artes.",
          "image": new URL(image, Astro.url).href,
          "url": "https://ciarte-ellaberinto.netlify.app",
          "telephone": `+54${siteSettings.whatsapp}`,
          "email": siteSettings.email,
          "sameAs": [
            siteSettings.facebook,
            siteSettings.facebook2,
            siteSettings.instagram
          ]
        },
        {
          "@type": "LocalBusiness",
          "@id": "https://ciarte-ellaberinto.netlify.app/#localbusiness",
          "name": "CIArte – Centro de Integración y Arte",
          "description": "Centro cultural con talleres de teatro, música, arte y más. Coordinado por El Laberinto Grupo de Teatro.",
          "image": new URL(image, Astro.url).href,
          "url": "https://ciarte-ellaberinto.netlify.app",
          "telephone": `+54${siteSettings.whatsapp}`,
          "email": siteSettings.email,
          "priceRange": "$",
          "address": {
            "@type": "PostalAddress",
            "streetAddress": siteSettings.direccion,
            "addressLocality": "General Güemes",
            "addressRegion": "Salta",
            "postalCode": "A4430",
            "addressCountry": "AR"
          },
          "geo": {
            "@type": "GeoCoordinates",
            "latitude": -24.6667,
            "longitude": -65.0500
          },
          "openingHoursSpecification": [
            {
              "@type": "OpeningHoursSpecification",
              "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
              "opens": "17:00",
              "closes": "21:00"
            },
            {
              "@type": "OpeningHoursSpecification",
              "dayOfWeek": "Saturday",
              "opens": "10:00",
              "closes": "13:00"
            }
          ],
          "sameAs": [
            siteSettings.facebook,
            siteSettings.facebook2,
            siteSettings.instagram
          ]
        }
      ]
    })} />

    <title>{title}</title>
    
    <ViewTransitions />

    <!-- Netlify Identity Widget -->
    <script is:inline src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
  </head>
  <body>
    <Header navItems={navItems} />
    <slot />
    <Footer />
    <Lightbox />

    <script>
      // Redirección al admin para Netlify Identity
      if (window.netlifyIdentity) {
        window.netlifyIdentity.on("init", user => {
          if (!user) {
            window.netlifyIdentity.on("login", () => {
              document.location.href = "/admin/";
            });
          }
        });
      }

      // Scroll Animations
      document.addEventListener('astro:page-load', () => {
        const observerOptions = {
          root: null,
          rootMargin: '0px',
          threshold: 0.1
        };

        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add('active');
              observer.unobserve(entry.target);
            }
          });
        }, observerOptions);

        document.querySelectorAll('.reveal').forEach(el => {
          observer.observe(el);
        });
      });
    </script>
  </body>
</html>
